generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

// npx prisma migrate dev --name init

model users {
  // id                    Int     @id @default(autoincrement())
  id                    String     @unique
  username              String
  password              String
  name                  String?
  phone                 String?
  address               String?
  age                   String?
  asset                 String?
  email                 String?
  investment_propensity String?
  mbti                  String?
  mod_date              String?
  reg_date              String?
}

model boards {
  id          String    @unique
  title       String?
  password    String?
  description String?
  mod_date    String?
  reg_date    String?
}

model articles {
  id        String     @unique
  title     String?
  content   String?
  mod_date  String?
  reg_date  String?
  board_id  String?
  writer_id String?
}
